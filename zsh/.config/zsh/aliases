# vim editor
alias nvim="/opt/nvim-linux64/bin/nvim"

# navigation
alias ~="cd ~"
alias -- -="cd -"
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

# list
alias l='ls -F1 --group-directories-first'
alias la='ls -FA'
alias ll='ls -Fahl'
alias dot='cd ~/.dotfiles'

# disk space
alias dfh='df -h --output=source,fstype,size,used,avail,pcent,target -x tmpfs -x devtmpfs'
alias dus='du -hs'
alias dud='du -hd 1'

# search
alias f.='find . -maxdepth 5 -type f -iname'
# G pipe grep
alias -g G=' | grep -i '
# complete history
alias h='history 0'

# confirmation
alias mkdir='mkdir -pv'
alias rm='rm -i'
alias mv='mv -iv'
alias cp='cp -iv'
alias ln='ln -iv'

# reboot / halt / poweroff
alias reboot='sudo /sbin/reboot'
alias poweroff='sudo /sbin/poweroff'
alias halt='sudo /sbin/halt'
alias shutdown='sudo /sbin/shutdown'

## pass options to free ##
alias meminfo='free -m -l -t'
## get top process eating memory
alias psmem='ps auxf | sort -nr -k 4'
alias psmem10='ps auxf | sort -nr -k 4 | head -10'
## get top process eating cpu ##
alias pscpu='ps auxf | sort -nr -k 3'
alias pscpu10='ps auxf | sort -nr -k 3 | head -10'

# third party stuff
alias cat='batcat'
alias fd='fdfind'
alias matrix='cmatrix -ab -C red -u 10'
# alias tldr='tldr -t base16'
alias tldrf='tldr -l1 | fzf --preview "tldr {1}" --preview-window=right,70% | xargs tldr'

# Virtualbox VMs
# alias docker-start='VBoxManage startvm docker --type=headless'
